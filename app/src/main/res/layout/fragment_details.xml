<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.screens.details.DetailsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginHorizontal="24dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_left"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/textStyle.Montserrat.600"
            android:layout_gravity="center"
            android:text="@string/details"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:padding="6dp"
            android:src="@drawable/ic_favorite"
            tools:ignore="ContentDescription" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/dark"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    style="@style/textStyle.Montserrat"
                    android:drawablePadding="4dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/gold"
                    app:drawableStartCompat="@drawable/ic_star"
                    app:drawableTint="@color/gold"
                    tools:text="9.5" />
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="120dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/textStyle.Montserrat.600"
                android:layout_width="150dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="12sp"
                android:lineSpacingExtra="6sp"
                tools:text="Spiderman No Way Home" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">

        <TextView
            android:textSize="12sp"
            tools:text="2021"
            android:textColor="@color/light_gray"
            style="@style/textStyle.Montserrat.500"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/light_gray" />

        <View
            android:background="@color/light_gray"
            android:layout_marginStart="12dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:textSize="12sp"
            tools:text="148 Minutes"
            android:textColor="@color/light_gray"
            style="@style/textStyle.Montserrat.500"
            android:drawablePadding="4dp"
            android:layout_marginStart="12dp"
            app:drawableStartCompat="@drawable/ic_clock"
            app:drawableTint="@color/light_gray" />

        <View
            android:background="@color/light_gray"
            android:layout_marginStart="12dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:textSize="12sp"
            tools:text="Action"
            android:textColor="@color/light_gray"
            style="@style/textStyle.Montserrat.500"
            android:drawablePadding="4dp"
            android:layout_marginStart="12dp"
            app:drawableStartCompat="@drawable/ic_ticket"
            app:drawableTint="@color/light_gray" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        style="@style/MyCustomTabLayout"
        android:background="@color/background"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="3dp"
        android:layout_marginTop="25dp"
        app:tabMode="fixed" />
    
    <TextView
        android:id="@+id/tv_desc"
        android:layout_marginTop="25dp"
        android:visibility="visible"
        android:text="@string/description"
        android:layout_marginHorizontal="30dp"
        style="@style/textStyle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reviews"
        android:visibility="gone"
        tools:listitem="@layout/item_reviews"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cast"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_cast" />

</LinearLayout>