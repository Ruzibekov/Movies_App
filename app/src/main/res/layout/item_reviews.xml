<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/background"
    android:paddingStart="34dp"
    android:paddingEnd="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_circle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_value"
        style="@style/textStyle.Poppins.500"
        android:layout_marginTop="14dp"
        android:textColor="@color/primary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/iv_circle"
        app:layout_constraintStart_toStartOf="@id/iv_circle"
        app:layout_constraintTop_toBottomOf="@id/iv_circle"
        tools:text="6.3" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/textStyle.Poppins.500"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_circle"
        app:layout_constraintTop_toTopOf="@id/iv_circle"
        tools:text="Iqbal Shafiq Rozaan" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/textStyle.Poppins.500"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="From DC Comics comes the Suicide Squad, an antihero team of incarcerated supervillains who act as deniable assets for the United States government." />

</androidx.constraintlayout.widget.ConstraintLayout>